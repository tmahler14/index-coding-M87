<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/neighbor_table_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/neighbors_expr_str"
        android:text="@string/table_expr_str"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <LinearLayout
        android:id="@+id/neighbor_table_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/neighbors_metadata"
            android:text="@string/table_metadata"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="left"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_weight="4" />
        <TextView
            android:id="@+id/neighbors_hops"
            android:text="@string/table_hops"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="left"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/neighbors_met"
            android:text="@string/table_met"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="left"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/neighbors_conn"
            android:text="@string/table_conn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="left"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
